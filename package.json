{
  "name": "TypingWale",
  "private": true,
  "version": "1.0.0",
  "description": "TypingWale - Master Hindi Typing with Interactive Lessons",
  "author": "Your Name",
  "main": "main.js",
  "scripts": {
    "dev": "concurrently \"vite\" \"npm:dev-electron\"",
    "dev-electron": "wait-on http://localhost:1233 && cross-env NODE_ENV=development electron .",
    "build": "vite build && electron-builder",
    "build:renderer": "vite build",
    "start": "cross-env NODE_ENV=production electron .",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "version:patch": "node scripts/version-bump.js patch",
    "version:minor": "node scripts/version-bump.js minor",
    "version:major": "node scripts/version-bump.js major",
    "build:patch": "npm run version:patch && npm run build",
    "build:minor": "npm run version:minor && npm run build",
    "build:major": "npm run version:major && npm run build"
  },
  "build": {
    "appId": "com.TypingWale.app",
    "productName": "TypingWale",
    "publish": [
      {
        "provider": "github",
        "owner": "Talha-ai",
        "repo": "TypingWale"
      }
    ],
    "directories": {
      "output": "dist_electron/${version}"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "package.json",
      "src/assets/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "resources/icons/icon.ico",
      "artifactName": "${productName}-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/ui": "^4.0.16",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "jsdom": "^27.4.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vite-plugin-javascript-obfuscator": "^3.1.0",
    "vitest": "^4.0.16",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@supabase/supabase-js": "^2.91.0",
    "@tanstack/react-query": "^5.90.19",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "electron-updater": "^6.7.3",
    "lucide-react": "^0.562.0",
    "next-themes": "^0.4.6",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-router-dom": "^7.12.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Talha-ai/TypingWale.git"
}
}
